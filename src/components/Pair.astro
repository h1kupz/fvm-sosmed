---
const { bribes, tkn1, tkr1, tkn2, tkr2 } = Astro.props;
---

<div class="flex flex-col items-center w-full">
    <img src="/assets/down.png" alt="arrow" class="w-6 mb-2 drop-shadow-v" />
    <div class="flex items-center justify-center">
        <img src={tkn1} alt={tkr1} class=`${bribes} token tokenSml` />
        <img src={tkn2} alt={tkr2} class=`${bribes} token tokenSml -ml-5` />
    </div>
    <p class="text-center mt-4">
        {tkr1} / {tkr2}
    </p>
</div>

<style>
    .oneBribe {
        @apply !h-24 mb-1;
    }
    .twoBribe {
        @apply !h-24 mb-1;
    }
</style>
