---
import Menu from "./Menu.astro";
---

<nav>
  <fieldset class="flex w-full gap-4 items-center">
    <input
      id="fvm"
      class="peer/fvm hidden"
      type="radio"
      name="status"
      checked
    />
    <input id="mvm" class="peer/mvm hidden" type="radio" name="status" />

    <div class="hidden peer-checked/fvm:block">
      <a href="/" class="flex items-center gap-3">
        <img src="/assets/fvm.png" alt="FVM" />
      </a>
    </div>

    <div class="hidden peer-checked/mvm:block">
      <a href="/" class="flex items-center gap-3">
        <img src="/assets/mvm.png" alt="mvm" />
      </a>
    </div>

    <h4
      class="text-left font-light text-[22px] leading-none mb-[2px] drop-shadow-fvm mr-auto"
    >
      Sosmed
    </h4>

    <label
      for="fvm"
      class="text-vwhite peer-checked/fvm:text-vgreen peer-checked/fvm:font-black cursor-pointer"
      >FVM</label
    >
    <label
      for="mvm"
      class="text-vwhite peer-checked/mvm:text-vgreen peer-checked/mvm:font-black cursor-pointer"
      >MVM</label
    >

    <div class="hidden peer-checked/fvm:block">
      <Menu chain="fvm" />
    </div>
    <div class="hidden peer-checked/mvm:block">
      <Menu chain="mvm" />
    </div>
  </fieldset>
</nav>
