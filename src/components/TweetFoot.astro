---
const { chain } = Astro.props;
---

<div
  class="grid grid-cols-3 justify-items-center place-content-center w-full h-16 mt-auto drop-shadow-fvm"
>
  <img
    src="/assets/base.svg"
    alt="Base"
    class=`bv ${chain} vis h-8 mt-2 mr-auto`
  />
  <h5 class=`bv ${chain} vis my-auto`>base.velocimeter.xyz</h5>
  <img
    src="/assets/canto.svg"
    alt="Canto"
    class=`cv ${chain} vis h-12 mr-auto`
  />
  <h5 class=`cv ${chain} vis my-auto`>velocimeter.xyz</h5>
  <img
    src="/assets/FantomNoBg.png"
    alt="Fantom"
    class=`fv ${chain} vis h-12 mr-auto`
  />
  <h5 class=`fv ${chain} vis my-auto`>fvm.exchange</h5>
  <img
    src="/assets/mantle.svg"
    alt="Mantle"
    class=`mv ${chain} vis h-12 mr-auto`
  />
  <h5 class=`mv ${chain} vis my-auto`>mvm.exchange</h5>
  <img src="/assets/V.svg" alt="Velocimeter" class="h-11 ml-auto" />
</div>

<style>
  .vis {
    @apply hidden;
  }
  .bv.bvm {
    @apply block;
  }
  .cv.cvm {
    @apply block;
  }
  .fv.fvm {
    @apply block;
  }
  .mv.mvm {
    @apply block;
  }
</style>
