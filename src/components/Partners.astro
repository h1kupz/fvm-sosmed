---
const { partner, chain } = Astro.props;
---

<div
  class="flex items-center justify-center gap-5 w-full h-10 mt-8 px-8 mb-auto drop-shadow-fvm"
>
  <img src={partner} alt="Partner" class="h-10" />
  <img src="/assets/handshake.png" alt="Handshake" class="h-6" />
  <img src="/assets/bvm.png" alt="BVM" class=`bv ${chain} vis h-10` />
  <img src="/assets/cvm.png" alt="CVM" class=`cv ${chain} vis h-10` />
  <img src="/assets/fvm.png" alt="FVM" class=`fv ${chain} vis h-10` />
  <img src="/assets/mvm.png" alt="MVM" class=`mv ${chain} vis h-10` />
</div>

<style>
  .vis {
    @apply hidden;
  }
  .bv.bvm {
    @apply block;
  }
  .cv.cvm {
    @apply block;
  }
  .fv.fvm {
    @apply block;
  }
  .mv.mvm {
    @apply block;
  }
</style>
