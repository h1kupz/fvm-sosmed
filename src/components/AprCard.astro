---
const { chain, crds, tkn1, tkr1, tkn2, tkr2, apr, tvl } = Astro.props;
---

<div class="card vborder">
  <div class=`${crds} cardHead vgradl`>
    <img src={tkn1} alt={tkr1} class="token" />
    <img src={tkn2} alt={tkr2} class="token -ml-10" />
    <div class="flex flex-wrap items-center gap-x-2 gap-y-1 ml-auto">
      <img
        src="/assets/base-icon.png"
        alt="Case"
        class=`bv ${chain} vis h-9 ml-auto`
      />
      <img
        src="/assets/canto.svg"
        alt="Canto"
        class=`cv ${chain} vis h-9 ml-auto`
      />
      <img
        src="/assets/FantomNoBg.png"
        alt="Fantom"
        class=`fv ${chain} vis h-9 ml-auto`
      />
      <img
        src="/assets/mantle-icon.svg"
        alt="Mantle"
        class=`mv ${chain} vis h-9 ml-auto`
      />
      <div class="ml-auto">
        <h6 class="text-xs">Live on:</h6>
        <h6 class=`bv ${chain} vis uppercase font-medium`>Base</h6>
        <h6 class=`cv ${chain} vis uppercase font-medium`>Canto</h6>
        <h6 class=`fv ${chain} vis uppercase font-medium`>Fantom</h6>
        <h6 class=`mv ${chain} vis uppercase font-medium`>Mantle</h6>
      </div>
    </div>
  </div>
  <div class=`${crds} cardBody vgradr flex flex-col gap-2`>
    <h4 class="uppercase mb-0">~Apr</h4>
    <h2 class="text-7xl mb-0">{apr}%</h2>
    <h3>{tkr1} / {tkr2}</h3>
    <h6>Current TVL: ~${tvl}</h6>
  </div>
</div>

<style>
  .card {
    @apply drop-shadow-fvm rounded-3xl;
  }
  .cardHead {
    @apply rounded-t-3xl p-5 mx-auto h-28 flex;
  }
  .cardBody {
    @apply rounded-b-3xl p-6 mx-auto;
  }
  .token {
    @apply rounded-full bg-background h-36 border-2 border-vgreen/40 drop-shadow-v;
  }
  .oneCard {
    @apply w-[500px];
  }
  .twoCard {
    @apply w-[400px];
  }
  .threeCard {
    @apply w-[350px] !p-4;
  }
</style>
